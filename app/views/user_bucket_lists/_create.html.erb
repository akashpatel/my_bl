<%= form_for :user_bucket_list, :url => user_bucket_lists_path, :remote => true do |f| %>
    <p> <%= f.label :type %>
        <%= f.select :rsvp_type, UserBucketList.activity_type, {:class=>"ui-widget-content ui-corner-all"}%>
    </p>
    <p> <%= f.label :Name %>:
        <%= f.text_field :name, {:class=>"text ui-widget-content ui-corner-all"}%>
    </p>
    <p> <%= f.label :tag %>:
        <%= f.text_field :tag, {:class=>"text ui-widget-content ui-corner-all"}%>
    </p>
    <p> <%= f.label :where %>:
        <%= f.text_field :where, {:class=>"text ui-widget-content ui-corner-all"}%>
    </p>
    <p><%= f.label :when %>:		
       <%= f.select :when, UserBucketList.select_when_to_complete, {:class=>"ui-widget-content ui-corner-all"}%>
    </p>
<% end %>